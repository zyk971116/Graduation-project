<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jf.school.mapper.AdminMapper">

    <select id="getLastNumber" resultType="java.lang.Integer">
        SELECT
        IFNULL(number,201 )
        FROM
        admin
        ORDER BY
        number DESC
        LIMIT 1

    </select>
    <select id="selectById" resultType="com.jf.school.bean.table.Admin">
        SELECT
        *
        FROM
        admin
        where
        id=#{id}
    </select>
</mapper>
